<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start_overlay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오버레이 컨트롤러 시작"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/center_guide" />

    <View
        android:id="@+id/center_guide"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/stop_overlay_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오버레이 컨트롤러 중지"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/center_guide" />

</RelativeLayout>